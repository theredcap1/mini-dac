<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="570.0" prefWidth="773.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.minidac.HelloController">
    <!-- Sidebar on the left -->

    <!-- Center content area -->
    <VBox fx:id="contentArea" style="-fx-background-color: #1e1b47;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <!-- HBox for Explore button -->
        <HBox fx:id="myHBox" alignment="CENTER_LEFT" prefHeight="42.0" prefWidth="642.0" spacing="10" style="-fx-background-color: #3e2258;">
            <Button fx:id="exploreButton" onAction="#toggleSidebar" prefHeight="41.0" prefWidth="94.0" style="-fx-background-color: #8a4c99; -fx-text-fill: white;" text="Explore" />
        </HBox>
    </VBox>
    <!-- ImageView to display uploaded images -->
    <ImageView fx:id="imageView" fitHeight="405.0" fitWidth="570.0" x="335.0" y="67.0" />
    <VBox fx:id="sidebar" layoutY="43.0" opacity="0.3" prefHeight="415.0" prefWidth="190.0" style="-fx-background-color: #5c3c8c;" visible="false">
        <Button onAction="#handleUpload" prefHeight="42.0" prefWidth="199.0" style="-fx-background-color: #8a4c99; -fx-text-fill: white;" text="Upload" />
        <ListView fx:id="imageListView" opacity="0.3" prefWidth="264.0" style="-fx-background-color: #5c3c8c;" />
    </VBox>
</AnchorPane>
