    </VBox>
   <VBox fx:id="main" layoutX="193.0" layoutY="77.0" prefHeight="200.0" prefWidth="100.0">
      <children>
          <!-- ImageView to display uploaded images -->
          <ImageView fx:id="imageView" fitHeight="405.0" fitWidth="580.0" x="335.0" y="67.0" />
         <Text fx:id="name" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER" wrappingWidth="578.9366607666016">
            <font>
               <Font size="18.0" />
            </font>
         </Text>
         <Text fx:id="size" fill="#949494" layoutX="10.0" layoutY="435.0" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER" wrappingWidth="578.9366607666016">
            <font>
               <Font size="13.0" />
            </font>
         </Text>
      </children>
   </VBox>
    <VBox fx:id="sidebar" layoutY="43.0" opacity="0.3" prefHeight="415.0" prefWidth="190.0" style="-fx-background-color: #5c3c8c;" visible="false">
        <Button onAction="#handleUpload" prefHeight="42.0" prefWidth="199.0" style="-fx-background-color: #8a4c99; -fx-text-fill: white;" text="Upload" />
        <ListView fx:id="imageListView" opacity="0.3" prefWidth="264.0" style="-fx-background-color: #5c3c8c;" />
    </VBox>
</AnchorPane>
