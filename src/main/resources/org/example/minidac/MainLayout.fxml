<AnchorPane prefHeight="570.0" prefWidth="917.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.minidac.HelloController">
    <!-- Sidebar on the left -->

    <!-- Center content area -->
    <VBox style="-fx-background-color: #1e1b47;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <!-- HBox for Explore button -->
        <HBox fx:id="myHBox" alignment="CENTER_LEFT" prefHeight="42.0" prefWidth="642.0" spacing="10" style="-fx-background-color: #3e2258;">
